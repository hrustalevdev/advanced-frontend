{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "ESNext",
    "target": "ES5",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true,
    "allowJs": true,
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
